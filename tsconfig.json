{
  "compilerOptions": {
    "target": "es2019",
    "module": "commonjs",
    "lib": [
      "es2020"
    ],
    "sourceMap": true,
    "removeComments": true,
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "rootDir": "./",
    "strict": true,
    "outDir": "./build",
    "resolveJsonModule": true,
    "typeRoots": [
      "product-service/node_modules/@types",
      "import-service/node_modules/@types"
    ]
  },
  "exclude": [
    "node_modules",
    "product-service/node_modules",
    "import-service/node_modules",
    "**/src/tests"
  ]
}
